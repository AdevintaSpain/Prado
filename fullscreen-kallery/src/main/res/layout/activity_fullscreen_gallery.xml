<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gallery_background"
    android:fitsSystemWindows="true"
    tools:context="com.schibsted.spain.fullscreenkallery.FullscreenGalleryActivity"
    >

  <com.schibsted.spain.fullscreenkallery.recyclerviewpager.HackyRecyclerViewPager
      android:id="@+id/galleryViewPager"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_centerInParent="true"
      app:rvp_singlePageFling="true"
      app:rvp_triggerOffset="0.25"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />

  <TextView
      android:id="@+id/pagerIndicatorNumber"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/gallery_pagerIndicator_text"
      style="@style/gallery_pagerIndicator"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      />

  <ImageView
      android:id="@+id/galleryCloseIcon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/gallery_close_icon"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      android:layout_marginEnd="8dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="8dp"
      />

</android.support.constraint.ConstraintLayout>
