<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppThemeFullScreenKallery"
         parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/galleryPrimaryColor</item>
    <item name="colorPrimaryDark">@color/galleryPrimaryColorDark</item>
    <item name="colorAccent">@color/galleryPrimaryColorAccent</item>
  </style>

  <style name="gallery_pagerIndicator">
    <item name="android:paddingTop">@dimen/gallery_pageIndicator_padding_top</item>
    <item name="android:paddingBottom">@dimen/gallery_pageIndicator_padding_bottom</item>
    <item name="android:paddingLeft">@dimen/gallery_pageIndicator_padding_left</item>
    <item name="android:paddingRight">@dimen/gallery_pageIndicator_padding_right</item>
    <item name="android:layout_marginTop">@dimen/gallery_pageIndicator_margin_top</item>
    <item name="android:layout_marginBottom">@dimen/gallery_pageIndicator_margin_bottom</item>
    <item name="android:layout_marginLeft">@dimen/gallery_pageIndicator_margin_left</item>
    <item name="android:layout_marginRight">@dimen/gallery_pageIndicator_margin_right</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:drawableLeft">@drawable/icon_camera_neg_m</item>
    <item name="android:drawablePadding">@dimen/gallery_text_drawable_padding</item>
    <item name="android:gravity">center</item>
    <item name="android:background">@color/gallery_pageIndicator_background</item>
  </style>

  <style name="gallery_pagerIndicator_text">
    <item name="android:textColor">@color/gallery_text_color</item>
    <item name="android:textSize">@dimen/gallery_text_size</item>
  </style>

  <style name="gallery_close_icon">
    <item name="android:paddingTop">@dimen/gallery_close_icon_padding_top</item>
    <item name="android:paddingBottom">@dimen/gallery_close_icon_padding_bottom</item>
    <item name="android:paddingLeft">@dimen/gallery_close_icon_padding_left</item>
    <item name="android:paddingRight">@dimen/gallery_close_icon_padding_right</item>
    <item name="android:layout_marginTop">@dimen/gallery_close_icon_margin_top</item>
    <item name="android:layout_marginBottom">@dimen/gallery_close_icon_margin_bottom</item>
    <item name="android:layout_marginLeft">@dimen/gallery_close_icon_margin_left</item>
    <item name="android:layout_marginRight">@dimen/gallery_close_icon_margin_right</item>
    <item name="android:layout_alignParentRight">true</item>
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:src">@drawable/icon_cross_neg_m</item>
  </style>
</resources>