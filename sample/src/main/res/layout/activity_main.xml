<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schibsted.spain.sample.MainActivity"
    >
  <Button
      android:id="@+id/launcherPicassoButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Launch Picasso gallery"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <Button
      android:id="@+id/launcherGlideButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Launch Glide gallery"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/launcherPicassoButton"
      />

</android.support.constraint.ConstraintLayout>
